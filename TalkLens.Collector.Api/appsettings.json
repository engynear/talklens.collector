{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=talklens;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Issuer": "TalkLens.Auth",
    "Audience": "TalkLens.API",
    "SecretKey": "your-super-secret-key-with-minimum-32-characters",
    "ExpiryInDays": 1
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Storage": {
    "Provider": "Minio",
    "UseRemoteStorage": false,
    "SkipMinioSave": true,
    "Minio": {
      "Endpoint": "localhost:9000",
      "AccessKey": "talklens",
      "SecretKey": "engypass",
      "WithSSL": false,
      "BucketName": "talklens",
      "TempDirectory": "TelegramSessionCache"
    }
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "TalkLens:",
    "KeyPrefix": "telegram:",
    "SessionExpiryHours": 1,
    "DbNumber": 0
  },
  "Telegram": {
    "ApiId": "23252333",
    "ApiHash": "2bfce46015419239292eeaed12562231",
    "RateLimit": {
      "RequestsPerMinute": 20,
      "RequestsPerHour": 300,
      "CooldownSeconds": 3,
      "MethodLimits": {
        "Messages_GetAllDialogs": {
          "RequestsPerMinute": 5,
          "RequestsPerHour": 100,
          "CooldownSeconds": 10
        },
        "Messages_GetHistory": {
          "RequestsPerMinute": 15,
          "RequestsPerHour": 250,
          "CooldownSeconds": 4
        }
      }
    },
    "Cache": {
      "DefaultExpirationMinutes": 10,
      "MethodExpirations": {
        "Messages_GetAllDialogs": {
          "ExpirationMinutes": 5
        },
        "GetRecentContacts": {
          "ExpirationMinutes": 3
        }
      }
    }
  }
